<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="hr.mobile.apps.course.lab9">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="hr.mobile.apps.course.lab9.screen.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="hr.mobile.apps.course.lab9.screen.login.LoginActivity" />
        <activity android:name="hr.mobile.apps.course.lab9.screen.home.HomeActivity" />
        <activity android:name="hr.mobile.apps.course.lab9.screen.bookdetails.BookDetailsActivity" />
    </application>

</manifest>